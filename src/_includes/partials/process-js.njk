{# Don't load this async or defer because it needs to come in prior to the actual data it manipulates #}
{%- if d3 -%}
    <script src="/assets/js/d3.min.js"></script>
{%- endif -%}
{%- if addJS or page.fileSlug === "" -%}
    {%- set js -%}
        {%- include "../js/main.js" -%}
        {%- if addJS -%}
            {%- include "../js/" + page.fileSlug + ".js" -%}
        {%- endif -%}
        {%- if page.fileSlug === "" -%}
            {%- include "../js/homepage.js" -%}
        {%- endif -%}
    {%- endset -%}
    {%- if myProject.environment == "production" -%}
        <script type="module">
            {{ js | jsmin | safe }}
        </script>
    {%- else -%}
        <script type="module">
            {{ js | safe }}
        </script>
    {%- endif -%}
{%- endif -%}
{%- if plvylist -%}
    <script src="/assets/js/plvylist-component.js" async></script>
{%- endif -%}