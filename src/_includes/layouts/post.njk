---js
{
    layout: "primary",
    pageName: "post",
    dateString: function(date) {
        let d = date.toUTCString();
        let gmt = /\s00:00:00\sGMT/g;
        return d.replace(gmt, "");
    }
}
---
<main class="post-container">
    <header class="post-header">
        <div class="wrapper">
            <div>
                <h1 id="post-title">{{ title }}</h1>
            </div>
            <div>
                <p id="post-date">{{ dateString(page.date) }}</p>
            </div>
        </div>
    </header>
    <div class="wrapper">
        <article class="post-body">
            {{ content | safe }}
        </article>
    </div>
</main>
{%- set nextPost = collections.post | getNextCollectionItem(page) %}
{%- set previousPost = collections.post | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<aside id="post-navigation">
    <div class="wrapper" data-constrain="more">
        <hr>
        <ul class="no-list post-navigation">
            {%- if nextPost %}<li>Next Post: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
            {%- if previousPost %}<li>Previous Post: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
        </ul>
    </div>
</aside>
{%- endif %}
